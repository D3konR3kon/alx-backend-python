pipeline {
    agent any

    environment {
        PROJECT_DIR = 'messaging_app' 
        VENV_DIR = "${PROJECT_DIR}/venv"  
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    credentialsId: 'd96ab65b-91c3-40a8-8ac3-46bd6231fa82', 
                    url: 'https://github.com/D3konR3kon/alx-backend-python.git'
            }
        }

        stage('Setup Environment') {
            steps {
                sh """
                    cd ${PROJECT_DIR}
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    pip install pytest pytest-cov  # Ensure test dependencies
                """
            }
        }

        stage('Run Tests') {
            steps {
                sh """
                    cd ${PROJECT_DIR}
                    . venv/bin/activate
                    python -m pytest --junitxml=test-results.xml --cov=. --cov-report=html
                """
            }
            post {
                always {
                    junit "${PROJECT_DIR}/test-results.xml" 
                    publishHTML target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: false,
                        keepAll: true,
                        reportDir: "${PROJECT_DIR}/htmlcov",  
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ]
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
